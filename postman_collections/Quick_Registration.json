{
	"info": {
		"_postman_id": "registration-collection-uuid",
		"name": "AlgoAgent - Registration",
		"description": "Simple user registration collection",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Register New User",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    var jsonData = pm.response.json();",
							"    pm.environment.set(\"access_token\", jsonData.tokens.access);",
							"    pm.environment.set(\"refresh_token\", jsonData.tokens.refresh);",
							"    pm.environment.set(\"user_id\", jsonData.user.id);",
							"    console.log('âœ… User registered successfully!');",
							"    console.log('Username:', jsonData.user.username);",
							"    console.log('Access Token saved to environment');",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"username\": \"newtrader\",\n    \"email\": \"newtrader@example.com\",\n    \"password\": \"SecurePass123!\",\n    \"password2\": \"SecurePass123!\",\n    \"first_name\": \"New\",\n    \"last_name\": \"Trader\"\n}"
				},
				"url": {
					"raw": "http://127.0.0.1:8000/api/auth/register/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["api", "auth", "register", ""]
				},
				"description": "Register a new user and automatically receive JWT tokens"
			},
			"response": []
		}
	]
}
