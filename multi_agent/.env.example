# Environment Configuration for LLM Router
# Copy to .env and fill in your values

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Secret Storage
# Options: env, vault, aws, azure
SECRET_STORE_TYPE=env

# For local development (SECRET_STORE_TYPE=env)
# Format: API_KEY_{key_id} where key_id matches your keys.json entries EXACTLY
#
# Multiple Gemini Flash Keys (for load distribution)
API_KEY_gemini-flash-01=AIzaSyABC123_your_first_flash_key_here
API_KEY_gemini-flash-02=AIzaSyDEF456_your_second_flash_key_here
API_KEY_gemini-flash-03=AIzaSyGHI789_your_third_flash_key_here
#
# Multiple Gemini Pro Keys (for heavy tasks)
API_KEY_gemini-pro-01=AIzaSyJKL012_your_first_pro_key_here
API_KEY_gemini-pro-02=AIzaSyMNO345_your_second_pro_key_here
#
# OpenAI Keys (optional - match your keys.json key_id format)
# API_KEY_openai-gpt4-01=sk-proj-ABC123_your_openai_key_here
# API_KEY_openai-gpt4-02=sk-proj-DEF456_your_second_openai_key_here
#
# Anthropic Keys (optional - match your keys.json key_id format)
# API_KEY_claude-opus-01=sk-ant-ABC123_your_claude_key_here
# API_KEY_claude-sonnet-01=sk-ant-DEF456_your_second_claude_key_here

# HashiCorp Vault (SECRET_STORE_TYPE=vault)
# VAULT_ADDR=https://vault.example.com
# VAULT_TOKEN=your-vault-token
# VAULT_SECRET_PATH=secret/llm

# AWS Secrets Manager (SECRET_STORE_TYPE=aws)
# AWS_REGION=us-east-1
# AWS_SECRET_PREFIX=llm/
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# Azure Key Vault (SECRET_STORE_TYPE=azure)
# AZURE_VAULT_URL=https://your-vault.vault.azure.net
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret
# AZURE_TENANT_ID=your-tenant-id

# Rate Limiting
USER_RPM_DEFAULT=10
USER_BURST_DEFAULT=20
GLOBAL_RPM_MAX=1000
GLOBAL_BURST_MAX=2000

# Conversation Settings
CONVERSATION_TTL_SECONDS=86400

# Feature Flags
LLM_MULTI_KEY_ROUTER_ENABLED=false

# Monitoring (optional)
# PROMETHEUS_PORT=9090

# Logging
LOG_LEVEL=INFO
